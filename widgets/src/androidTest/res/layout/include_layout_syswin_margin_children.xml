<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/margin_system_window_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_marginSystemWindowInsets="left" />

    <View
        android:id="@+id/margin_system_window_top"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_marginSystemWindowInsets="top" />

    <View
        android:id="@+id/margin_system_window_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_marginSystemWindowInsets="right" />

    <View
        android:id="@+id/margin_system_window_bottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_marginSystemWindowInsets="bottom" />

    <View
        android:id="@+id/margin_system_window_all"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_marginSystemWindowInsets="left|top|right|bottom" />

    <View
        android:id="@+id/margin_system_window_all_withmargin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin"
        app:layout_marginSystemWindowInsets="left|top|right|bottom" />

</merge>
